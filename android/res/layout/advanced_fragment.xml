<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	
	    <CheckBox
	        android:id="@+id/advanced_caps"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:text="Uppercase Letters" />
	    
	    <CheckBox
	        android:id="@+id/advanced_symbols"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:text="Symbols" />
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:textSize="18sp"
	        android:textStyle="bold"
	        android:textColor="@color/slate_dark"
	        android:text="Symbol Characters" />
	    
	    <EditText 
	        android:id="@+id/advanced_symchars"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:singleLine="true"
	        android:hint="Symbol Characters" />
	    
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="25dp"
	        android:textSize="18sp"
	        android:textStyle="bold"
	        android:textColor="@color/slate_dark"
	        android:text="Number of Hashes" />
	
	   	<EditText 
	        android:id="@+id/advanced_k2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:inputType="number"
	        android:hint="Number of Hashes" />
	    
	</LinearLayout>

</ScrollView>
